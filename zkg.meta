[package]
script_dir = scripts


build_command = git clone https://github.com/canarieids/canssoc-intel.git /opt/zeek/share/zeek/site/canssoc-intel-data && crontab -l | { cat; echo "0 * * * * /opt/zeek/share/zeek/site/canssoc-zeek-pkg/update-feeds.sh"; } | crontab -


#test_command = coming soon


summary = CANSSOC Threatfeed ingestion into Zeek Intel framework
description = The CANSSOC Threatfeed provides Indicators of Compromise (IOC) feeds to consumers to incorporate into their IDS platforms.

depends =
        zeek >=4.0.0

[template]
source = https://github.com/zeek/package-template
version = v2.0.0
zkg_version = 2.13.0

[template_vars]
name = canssoc-zeek-pkg

